@model BaiTap.Controllers.HomeController.Dashboard
@{
    ViewBag.Title = "Home Page";
}

<main id="main" class="main" style="width:1200px">

    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">

            <!-- Left side columns -->
            <div class="col-lg-8">
                <div class="row">

                    <!-- Recent Sales -->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">

                            <div class="filter">
                                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <li class="dropdown-header text-start">
                                        <h6>Filter</h6>
                                    </li>

                                    <li><a class="dropdown-item" href="#">Today</a></li>
                                    <li><a class="dropdown-item" href="#">This Month</a></li>
                                    <li><a class="dropdown-item" href="#">This Year</a></li>
                                </ul>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Danh sách các sản phẩm bán chạy <span>|</span></h5>
                                <table  class="table table-borderless">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(n =>n.kq.First().TenSanPham)
                                        </th>                                       
                                        <th>
                                            @Html.DisplayNameFor(n => n.kq.First().SoLuongDaBan)
                                        </th>

                                        <th>
                                            @Html.DisplayNameFor(n => n.kq.First().Gia)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(n => n.kq.First().TongDoanhThu)
                                        </th>                                      
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.kq)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TenSanPham)
                                            </td>
                                          
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SoLuongDaBan)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Gia)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TongDoanhThu)
                                            </td>                                         
                                           
                                        </tr>

                                    }
                                    </table>
                            </div>

                        </div>
                    </div><!-- End Recent Sales -->
                    <!-- Top Selling -->
                    <div class="col-12">
                        <div class="card top-selling overflow-auto">

                            <div class="filter">
                                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <li class="dropdown-header text-start">
                                        <h6>Filter</h6>
                                    </li>

                                    <li><a class="dropdown-item" href="#">Today</a></li>
                                    <li><a class="dropdown-item" href="#">This Month</a></li>
                                    <li><a class="dropdown-item" href="#">This Year</a></li>
                                </ul>
                            </div>

                            <div class="card-body pb-0">
                                <h5 class="card-title">Sản phẩm có danh thu cao <span></span></h5>

                                <table class="table table-borderless">

                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(n => n.kq.First().TenSanPham)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(n => n.kq.First().SoLuongDaBan)
                                            </th>

                                            <th>
                                                @Html.DisplayNameFor(n => n.kq.First().Gia)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(n => n.kq.First().TongDoanhThu)
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.kq)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TenSanPham)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.SoLuongDaBan)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Gia)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TongDoanhThu)
                                                </td>

                                            </tr>

                                        }
                                </table>
                                

                            </div>

                        </div>
                    </div><!-- End Top Selling -->

                </div>
            </div><!-- End Left side columns -->
        </div>
    </section>

</main><!-- End #main -->