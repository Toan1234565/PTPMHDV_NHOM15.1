@model IEnumerable<BaiTap.Models.SanPham>

@{
    ViewBag.Title = "Comparison Results";
}

<h2>Comparison Results</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Image</th>
            <!-- Add more columns as needed -->
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.TenSanPham</td>
                <td>@product.Gia</td>
                <td>@product.MoTa</td>
                <td><img src="@product.HinhAnh" alt="@product.TenSanPham" width="50" height="50" /></td>
                <!-- Add more columns as needed -->
            </tr>
        }
    </tbody>
</table>
