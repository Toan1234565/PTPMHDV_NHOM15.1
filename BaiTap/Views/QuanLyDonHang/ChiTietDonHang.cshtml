@model IEnumerable<BaiTap.Models.ChiTietDonHang>

@{
    ViewBag.Title = "ChiTietDonHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ChiTietDonHang</h2>

<main id="main" class="main" style="width:100%">
    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </nav>
    </div>
    <section class="section dashboard">
        <div class="row">
            <div class="col-lg-8" style="width:1200px">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.DonHangID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SanPhamID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SoLuong)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Gia)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DonHangID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SanPhamID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoLuong)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gia)
                            </td>
                        </tr>

                    }

                </table>
                <a href="@Url.Action("Index", "QuanLyDonHang")" class="btn btn-default">Quay lại</a>
            </div>
       </div>
    </section>
</main>
        
