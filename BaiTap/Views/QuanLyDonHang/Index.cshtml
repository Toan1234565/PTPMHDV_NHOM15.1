
@model IEnumerable<BaiTap.Models.DonHang>

@{
    ViewBag.Title = "Quản lý đơn hàng";
}
<main id="main" class="main" style="width:100%">

    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </nav>
    </div>
    <section class="section dashboard">
        <div class="row">
            <div class="col-lg-8" style="width:1200px">
                <table class="table">
                    <tr>
                        <th>Mã đơn hàng</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt hàng</th>
                        <th>Trạng thái</th>
                        <th>Tổng tiền</th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.DonHangID)</td>
                            <td>@Html.DisplayFor(modelItem => item.KhachHang.HoTen)</td>
                            <td>@Html.DisplayFor(modelItem => item.NgayDatHang)</td>
                            <td>@Html.DisplayFor(modelItem => item.TrangThai)</td>
                            <td>@Html.DisplayFor(modelItem => item.TongTien)</td>
                            <td>
                                @Html.ActionLink("Chi tiết", "ChiTietDonHang", new { id = item.DonHangID }) |
                                @Html.ActionLink("Sửa", "SuaDonHang", new { id = item.DonHangID }) |
                                @Html.ActionLink("Xóa", "XoaDonHang", new { id = item.DonHangID })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        <div class="form-actions no-color">
            <a href="@Url.Action("TaoDonHang","QuanLyDonHang")" class="btn btn-default">Tao don hang moi</a>
        </div>
    </section>

</main>



