@model BaiTap.Models.DonHang

@{
    ViewBag.Title = "Xóa Đơn Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa Đơn Hàng</h2>

<main id="main" class="main" style="width:100%">

    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </nav>
    </div>
    <section class="section dashboard">
        <div class="row">
            <div class="col-lg-8" style="width:1200px">
                <div class="form-horizontal">            
                    <h2>Sửa Đơn Hàng</h2>

                    @using (Html.BeginForm("SuaDonHang", "QuanLyDonHang", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.LabelFor(model => model.KhachHang.HoTen, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <input type="text" name="HoTen" class="form-control" value="@Model.KhachHang.HoTen" />
                                @Html.ValidationMessageFor(model => model.KhachHang.HoTen, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.KhachHang.SoDienThoai, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <input type="text" name="SoDienThoai" class="form-control" value="@Model.KhachHang.SoDienThoai" />
                                @Html.ValidationMessageFor(model => model.KhachHang.SoDienThoai, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.NgayDatHang, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NgayDatHang, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                                @Html.ValidationMessageFor(model => model.NgayDatHang, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Lưu" class="btn btn-primary" />
                                <a href="@Url.Action("Index", "QuanLyDonHang")" class="btn btn-default">Hủy</a>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </section>

</main>



