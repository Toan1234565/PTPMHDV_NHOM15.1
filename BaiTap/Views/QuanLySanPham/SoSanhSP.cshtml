        <tr>
            <th>Thuộc Tính</th>
            @foreach (var product in Model)
            {
                <th>@product["Tên Sản Phẩm"]</th>
            }
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Mã Sản Phẩm</td>
