@using BaiTap.Services;
@model List<PieChartData>

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Biểu Đồ Tròn</title>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <style>
            bode{
                padding-left:200px;
                margin-left:200px;
            }
            h2 {
               margin-top:100px;
                margin-left: 300px;
            }
            canvas {

              margin-left:300px;
            }
        </style>
    </head>

    <body>

        <h2>Biểu Đồ Tròn: Tỷ Lệ Phần Trăm của Từng Loại Sản Phẩm trong Tổng Tồn Kho</h2>
        <canvas id="pieChart" width="200" height="200"></canvas>


        <script>
            var ctx = document.getElementById('pieChart').getContext('2d');
            ctx.canvas.width = 200;
            ctx.canvas.height = 200;

            var pieChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: @Html.Raw(Json.Encode(Model.Select(d => d.Label).ToList())),
                    datasets: [{
                        data: @Html.Raw(Json.Encode(Model.Select(d => d.Value).ToList())),
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        }
                    }
                }
            });
        </script>
    </body>
    </html>
