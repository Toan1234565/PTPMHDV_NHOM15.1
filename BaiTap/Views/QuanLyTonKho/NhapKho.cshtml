                                            @Html.TextAreaFor(model => model.ChiTietSanPham.CameraSau, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.ChiTietSanPham.CameraSau, "", new { @class = "text-danger" })
