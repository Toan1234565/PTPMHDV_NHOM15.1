                                            @Html.ValidationMessageFor(model => model.ChiTietSanPham.Pin, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <br />
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <button type="submit" class="btn btn-default">Lưu</button>
                                        </div>
                                    </div>
                                }
                                
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>

</main><!-- End #main -->
