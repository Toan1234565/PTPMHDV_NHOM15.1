@model BaiTap.Models.TonKho

@using (Html.BeginForm("SuaTonKho", "QuanLyTonKho", FormMethod.Post, new { @id = "suaTonKhoForm" }))
{
    @Html.HiddenFor(model => model.SanPhamID)
    <div class="form-group">
        @Html.LabelFor(model => model.SanPhamID, "Sản Phẩm ID")
        @Html.EditorFor(model => model.SanPhamID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SoLuongTon, "Số Lượng Tồn")
        @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.NgayCapNhat, "Ngày Cập Nhật")
        @Html.EditorFor(model => model.NgayCapNhat, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
    </div>
    
}
