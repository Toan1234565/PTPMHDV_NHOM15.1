@model BaiTap.Models.TaiKhoanKH

@{
    ViewBag.Title = "Chi tiết tài khoản khách hàng";
}

<style>
    .container {
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
    }

    dl {
        text-align: left;
        font-size: 14px;
    }

    table {
        width: 100%;
        font-size: 14px;
    }

    th, td {
        padding: 10px;
    }
</style>

<h2>Chi tiết tài khoản khách hàng</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>ID</dt>
                <dd>@Model.TaiKhoanID</dd>

                <dt>Tên đăng nhập</dt>
                <dd>@Model.TenDangNhap</dd>

                <dt>Trạng thái</dt>
                <dd>@Model.TrangThai</dd>

                <dt>Khách hàng</dt>
                <dd>@Model.KhachHang?.TenKhachHang</dd>
            </dl>
        </div>
        <div class="col-md-6">
            <h3>Đơn hàng</h3>
            @if (ViewBag.DonHangs != null)
            {
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var donHang in ViewBag.DonHangs)
                        {
                            <tr>
                                <td>@donHang.DonHangID</td>
                                <td>@donHang.NgayDat.ToShortDateString()</td>
                                <td>@donHang.TongTien.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Không có đơn hàng nào.</p>
            }
        </div>
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-primary" })
    </div>
</div>
