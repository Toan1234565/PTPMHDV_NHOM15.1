@model BaiTap.Models.TaiKhoanKH

@{
    ViewBag.Title = "Xóa tài khoản khách hàng";
}

<style>
    .container {
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
    }

    dl {
        text-align: left;
        font-size: 14px;
    }

    .alert {
        font-size: 16px;
    }
</style>

<h2>Xóa tài khoản khách hàng</h2>

<div class="container">
    <div class="alert alert-warning" role="alert">
        Bạn có chắc chắn muốn xóa tài khoản này?
    </div>

    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <dl class="dl-horizontal">
                <dt>ID</dt>
                <dd>@Model.TaiKhoanID</dd>

                <dt>Tên đăng nhập</dt>
                <dd>@Model.TenDangNhap</dd>

                <dt>Trạng thái</dt>
                <dd>@Model.TrangThai</dd>

                <dt>Khách hàng</dt>
                <dd>@Model.KhachHang?.TenKhachHang</dd>
            </dl>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xóa" class="btn btn-danger" /> |
                @Html.ActionLink("Hủy bỏ", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    }
</div>
