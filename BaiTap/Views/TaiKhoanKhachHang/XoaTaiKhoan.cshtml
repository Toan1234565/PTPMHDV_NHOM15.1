@model BaiTap.Models.TaiKhoanKH

@{
    ViewBag.Title = "Xóa tài khoản";
}

<h2 class="text-center">Xóa tài khoản</h2>

<div class="container mt-3" style="max-width: 600px;">
    <h3 class="text-center">Bạn có chắc chắn muốn xóa tài khoản này không?</h3>
    <div>
        <h4>Tài khoản</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.TenDangNhap)</dt>
            <dd>@Html.DisplayFor(model => model.TenDangNhap)</dd>
            <dt>@Html.DisplayNameFor(model => model.TrangThai)</dt>
            <dd>@Html.DisplayFor(model => model.TrangThai)</dd>
        </dl>

        @using (Html.BeginForm("XoaTaiKhoan", "TaiKhoanKhachHang", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.TaiKhoanID)
            <div class="form-group text-center">
                <input type="submit" value="Xóa" class="btn btn-danger" /> |
                @Html.ActionLink("Quay lại", "DSTaiKhoan", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>
